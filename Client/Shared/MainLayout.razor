                    </div>
                    <div class="text-xxs mt-4 text-blue-800 dark:text-blue-400">
                        <ul class="list-disc space-y-1 pl-1">
                            <li>No. Rekening an Mohammad Iqbal</li>
                            <li>Bukti transfer kirim ke WA 08112245610</li>
                            <li>Pembayaran paling lambat setiap tgl 15</li>
                            <li>Pengecekan Air di mulai setiap tgl 25</li>
                        </ul>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</aside>

<!-- Push Notification -->
<daryon_house_ui.Client.Component.Toast />

<div class="p-4 sm:ml-64">
    <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
        @Body
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool isFirstRender) {
        if (isFirstRender)
        {
           await JSRuntime.InvokeVoidAsync("window.initializeFlowbite");
        }
    }

    private async Task ToggleSidebar()
    {
        await JSRuntime.InvokeVoidAsync("visibilityElement", "logo-sidebar");
    }
}